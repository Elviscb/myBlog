extends layout

block content
    ul.breadcrumb.pull-right
        - for(var i=locsAll.length-1;i > -1;i--){
            li
                if i-1
                    a(href="#{locsAll[i-1]}") #{locsAll[i--]}
                    span.divider /
                else
                    span #{locsAll[i--]}
        - }
    h2.page-header #{blog.name}
    div(style="margin: -25px 0 20px;")
        i.icon-download
        a(href="/download/#{blog._id}.md") RAW&Download...
    div.row
        div.span3
            div#left-nav(data-offset-top="160",style="width:258px;top:22px;")
                ul.nav
                    li.nav-header(style="padding-top:13px") 文章
                    if menus.length == 0
                        li(style="padding:10px") 没有内容
                    else
                    each v,i in menus
                        if v._id.toString()==blog._id.toString()
                            li.active
                                a(href="/blog/#{v._id}") #{v.title}
                                    i.icon-chevron-right.pull-right
                        else
                            li
                                a(href="/blog/#{v._id}") #{v.title}
                                    i.icon-chevron-right.pull-right
